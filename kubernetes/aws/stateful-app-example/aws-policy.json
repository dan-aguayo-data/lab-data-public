{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "ec2:CreateVolume",
                "ec2:AttachVolume",
                "ec2:DeleteVolume",
                "ec2:DetachVolume",
                "ec2:DescribeVolume",
                "ec2:DescribeInstances",
                "ec2:DescribeAvailabilityZones",
                "ec2:ModifyVolume"
            ],
            "Resource": "*"
        }
    ]
}
